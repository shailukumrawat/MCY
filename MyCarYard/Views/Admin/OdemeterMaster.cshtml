            }

            if (status == null || status == "" || status == undefined) {

                /*lnv.alert({
                    title: '',
                    content: 'Please Select Status',
                    alertBtnText: 'Okay',
                    alertHandler: function () {
                        $("#status").focus();
                    }
                })
                */
