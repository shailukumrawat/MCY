                                window.location = url;

                            }
                        });
                        $('.alert-btn').focus();
                    }
                },
                error: function () {
                    //alert("Error");
                }
            });
            },
            cancelHandler: function () {
                // cancel callback
            }
        })
        return false;
    }
</script>