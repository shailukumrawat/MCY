<script type="text/javascript">
    function UpdateCountry() {
        //var url = "/Home";
        $.ajax({
            type: "POST",
            contentType: "application/json; charset=utf-8",
            url: '/Home/UpdateCountry',
            data: "{count_id:'"+ $("#cid").val() +"' ,country: '" + $("#country").val() + "',status:'" + $("#status").val() + "'}",
            dataType: "json",
            async: false,
            success: function (response) {
                if (response.status == "Success") {

                    lnv.alert({
                        title: '',
                        content: 'Country Updated Successfully',
                        alertBtnText: 'Okay',
                        alertHandler: function () {
                            var url = '@Url.Action("CountryMaster", "Home")';
                            window.location = url;

                        }
                    });
                    $('.alert-btn').focus();
                }
            },
            error: function () {
                //  alert("Error");
            }
        });
    }
</script>


<script>

    function deleteCountry(id) {

        lnv.confirm({
            title: 'Confirm',
            content: 'Are You sure you want to Delete the Country ?',
            confirmHandler: function () {
                $.ajax({
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    url: '/Home/DeleteCountry',
                    data: "{count_id:'" + id + "'}",
                    dataType: "json",
                    async: false,
                    success: function (response) {
                        if (response.status == "Success") {
                            lnv.alert({
                                title: ' ',
                                content: 'Country Deleted Successfully',
                                alertBtnText: 'Okay',
                                alertHandler: function () {
                                    var url = '@Url.Action("CountryMaster", "Home")';
                                    window.location = url;

                                }
                            });
                            $('.alert-btn').focus();
                            //loadtable();
                        }
                        if (response.status == "ExistsChild") {
                            lnv.alert({
                                title: '',
                                content: 'Sorry!!. This Country associated with some states, please delete that states first !!',
                                alertBtnText: 'Okay',
                            });
                            $('.alert-btn').focus();
                        }
                    },
                    error: function () {
                        //  alert("Error");
                    }
                });


            },
            cancelHandler: function () {
                // cancel callback
            }
        })

        return false;
    }
</script>