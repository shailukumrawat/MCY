<script type="text/javascript">
    function UpdateState() {
        //var url = "/Home";
        var obj = {"state_id": $("#sid").val() ,"count_id": $("#country").val() ,"state": $("#state").val() ,"status": $("#status").val() };
        $.ajax({
            type: "POST",
            contentType: "application/json; charset=utf-8",
            url: '/Home/UpdateState',
            data: JSON.stringify(obj),
            dataType: "json",
            async: false,
            success: function (response) {
                if (response.status == "Success") {
                    lnv.alert({
                        title: ' ',
                        content: 'State Updated Successfully',
                        alertBtnText: 'Okay',
                        alertHandler: function () {
                            var url = '@Url.Action("StateMaster", "Home")';
                            window.location = url;
                        }
                    });
                    $('.alert-btn').focus();
                    //loadtable();
                }
            },
            error: function () {
                //  alert("Error");
            }
        });
    }
</script>

<script>

    function deleteState(id) {

        lnv.confirm({
            title: 'Confirm',
            content: 'Are You sure you want to Delete the State ?',
            confirmHandler: function () {
                $.ajax({
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    url: '/Home/DeleteState',
                    data: "{state_id:'" + id + "'}",
                    dataType: "json",
                    async: false,
                    success: function (response) {
                        if (response.status == "Success") {
                            lnv.alert({
                                title: ' ',
                                content: 'State Deleted Successfully',
                                alertBtnText: 'Okay',
                                alertHandler: function () {
                                    var url = '@Url.Action("StateMaster", "Home")';
                                    window.location = url;

                                }
                            });
                            $('.alert-btn').focus();

                            //loadtable();
                        }
                        if (response.status == "ExistsChild") {
                            lnv.alert({
                                title: '',
                                content: 'Sorry!!. This State associated with some city, please delete that city first !!',
                                alertBtnText: 'Okay',
                            });
                            $('.alert-btn').focus();
                        }
                    },
                    error: function () {
                        //  alert("Error");
                    }
                });


            },
            cancelHandler: function () {
                // cancel callback
            }
        })

        return false;
    }
</script>










