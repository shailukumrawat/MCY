            // document.getElementById('latlong').innerHTML = event.latLng.lat() + ', ' + event.latLng.lng()
        });
        function placeMarker(location) {

            if (marker == null)
            {
                marker = new google.maps.Marker({
                    position: location,
                    map: map
                }); } else {   marker.setPosition(location); } }
    }
</script>
